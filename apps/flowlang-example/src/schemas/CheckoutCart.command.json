{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "CheckoutCart",
  "type": "object",
  "properties": {
    "cartId": {
      "type": "string",
      "description": "Unique identifier for the shopping cart"
    },
    "userId": {
      "type": "string",
      "description": "Unique identifier for the user checking out"
    },
    "shippingAddress": {
      "type": "string",
      "description": "Shipping address for the order"
    },
    "paymentMethod": {
      "type": "string",
      "enum": ["credit_card", "debit_card", "paypal", "apple_pay", "google_pay"],
      "description": "Payment method for the order"
    }
  },
  "required": ["cartId", "userId", "shippingAddress", "paymentMethod"],
  "additionalProperties": false
} 